{
  "name": "webcomponent-vl-side-sheets",
  "version": "0.0.1",
  "description": "Blauwdruk voor nieuwe webcomponenten",
  "scripts": {
    "prepare": "npm update --dev vl-ui-util && npm run prepare:util",
    "prepare:util": "npm explore vl-ui-util -- npm run util",
    "test": "wct -l chrome,firefox --npm",
    "release": "np",
    "release:prepare": "npm run release:prepare:build && npm run release:prepare:css && npm run release:prepare:commit",
    "release:prepare:build": "uglifyjs --compress --mangle --output vl-side-sheets.js -- *.src.js",
    "release:prepare:css": "replace '\\.\\./style.css' '/node_modules/vl-ui-side-sheets/style.css' vl-side-sheets.js",
    "release:prepare:commit": "git add -f vl-side-sheets.js && git commit --amend --no-edit && git pull",
    "release:testless": "np --yolo",
    "demo": "http-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-side-sheets.git"
  },
  "author": "DIDM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milieuinfo/webcomponent-vl-side-sheets/issues"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-side-sheets#readme",
  "dependencies": {
    "vl-ui-util": "^2.0.6",
    "vl-ui-core": "^2.1.0",
    "replace": "^1.1.1"
  },
  "devDependencies": {
    "np": "3.0.4",
    "sass": "1.23.0",
    "uglify-js-es6": "2.8.9",
    "wct-browser-legacy": "1.0.2",
    "web-component-tester": "6.9.2"
  }
}
